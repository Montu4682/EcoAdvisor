<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>Eco Guardian - AI-Powered Waste Reduction Advisor</display-name>
    
    <!-- Context parameters -->
    <context-param>
        <param-name>openai.api.key</param-name>
        <param-value>${OPENAI_API_KEY}</param-value>
    </context-param>
    
    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- AI Analysis Servlet -->
    <servlet>
        <servlet-name>AIAnalysisServlet</servlet-name>
        <servlet-class>com.ecoguardian.servlet.AIAnalysisServlet</servlet-class>
        <multipart-config>
            <max-file-size>52428800</max-file-size> <!-- 50MB -->
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>1048576</file-size-threshold> <!-- 1MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AIAnalysisServlet</servlet-name>
        <url-pattern>/api/analyze</url-pattern>
    </servlet-mapping>
    
    <!-- User Data Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.ecoguardian.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>
    
    <!-- Actions Servlet -->
    <servlet>
        <servlet-name>ActionsServlet</servlet-name>
        <servlet-class>com.ecoguardian.servlet.ActionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActionsServlet</servlet-name>
        <url-pattern>/api/actions</url-pattern>
    </servlet-mapping>
    
    <!-- News Servlet -->
    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>com.ecoguardian.servlet.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/api/news</url-pattern>
    </servlet-mapping>
    
    <!-- Recycling Centers Servlet -->
    <servlet>
        <servlet-name>RecyclingCentersServlet</servlet-name>
        <servlet-class>com.ecoguardian.servlet.RecyclingCentersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecyclingCentersServlet</servlet-name>
        <url-pattern>/api/recycling-centers</url-pattern>
    </servlet-mapping>
    
    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    
    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>
</web-app>